generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Order {
  id             Int      @id @default(autoincrement())
  email          String
  tanggal        DateTime
  nama           String
  pilihanKatalog String
  idKatalog      Int
  alamat         String
  nomorTelepon   String
  status         Status
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt
  
  katalog        Katalog  @relation(fields: [idKatalog], references: [id])
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String
  password String
  email    String
}

model Katalog {
  id           Int      @id @default(autoincrement())
  namaKatalog  String
  harga        Int
  deskripsi    String
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt
  orders       Order[]   
}

model Profil {
  id         Int    @id @default(autoincrement())
  kontakWO   String
  deskripsiWO String
  alamatWO   String
  aboutWO    String
}

enum Status {
  Approve
  Pending
}
